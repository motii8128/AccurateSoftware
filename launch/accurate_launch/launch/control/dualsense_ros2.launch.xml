<launch>
    <node pkg="joy" exec="joy_node"/>

    <node pkg="dualsense_ros2" exec="dualsense_ros2_node" name="dualsense_ros2_node">
        <remap from="/joy" to="/joy"/>

        <remap from="/dualsense/twist" to="/planning/cmd_vel"/>
        <remap from="/dualsense/up_and_down" to="/planning/arm/updown"/>
        <remap from="/dualsense/l_sholder" to="/planning/arm/frontback"/>
        <remap from="/dualsense/r_sholder" to="/planning/arm/hand"/>

        <param name="max_pow" value="500.0" />
    </node>
</launch>